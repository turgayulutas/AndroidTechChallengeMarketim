<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingEnd="36dp">

        <com.turgayulutas.marketim.View.Custom.CustomTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:text="MARKETÄ°M"
            android:textColor="#E91E2F"
            android:textSize="40sp"
            app:typeface="ProductSans_Bold" />


        <com.turgayulutas.marketim.View.Custom.CustomEditText
            android:id="@+id/ed_loginUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_stroke_gray_edittext"
            android:drawableStart="@drawable/ic_user_gray_20dp"
            android:drawableLeft="@drawable/ic_user_gray_20dp"
            android:drawablePadding="16dp"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:textColorHint="#66000000"
            app:typeface="ProductSans_Regular" />

        <com.turgayulutas.marketim.View.Custom.CustomEditText
            android:id="@+id/ed_loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_stroke_gray_edittext"
            android:drawableStart="@drawable/ic_password_gray_20dp"
            android:drawableLeft="@drawable/ic_password_gray_20dp"
            android:drawablePadding="16dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:textColorHint="#66000000"
            app:typeface="ProductSans_Regular" />


        <Switch
            android:id="@+id/sw_rememberMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remember_me" />

        <com.turgayulutas.marketim.View.Custom.CustomTextView
            android:id="@+id/tv_loginResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#E91E2F"
            android:textSize="15sp"
            app:typeface="ProductSans_Medium" />

        <com.turgayulutas.marketim.View.Custom.CustomButton
            android:id="@+id/btn_loginUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_red_signin"
            android:gravity="center"
            android:onClick="signIn"
            android:text="@string/sign_in"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:typeface="ProductSans_Bold" />

    </LinearLayout>
</RelativeLayout>